# Environment variables for Gemini MCP Server
# Copy this file to .env and fill in your values

# Required: Google API Key for Gemini
# Get yours at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Rate limiting settings (requests per minute)
# Default: 15 (free tier limit)
MAX_REQUESTS_PER_MINUTE=15

# Optional: Image output directory
# Default: ./generated_images
IMAGE_OUTPUT_DIR=./generated_images

# Optional: History database path
# Default: ./queue_persistence.db
HISTORY_DB_PATH=./queue_persistence.db